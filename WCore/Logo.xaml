<Window x:Class="WCore.LogoFrm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WCore"
        mc:Ignorable="d"
        Title="Logon" Height="165" Width="232">
    <Grid>
        <Button x:Name="button" Content="Sign me up." HorizontalAlignment="Left" Margin="10,95,0,0" Click="button_Click" Height="19" VerticalAlignment="Top"/>

        <Image x:Name="image"  HorizontalAlignment="Left" Height="44" Margin="10,8,0,0" VerticalAlignment="Top" Width="170" Loaded="image_Loaded" Opacity="0.9" OpacityMask="#FF1D421D"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="80" TextChanged="textBox_TextChanged"/>
        <CheckBox x:Name="checkBox" Content="Logon" HorizontalAlignment="Left" Margin="135,59,0,0" VerticalAlignment="Top" Width="80" IsEnabled="False"/>

    </Grid>
</Window>
